@model VKINFO.APPLICATION.GenreAdmin.Queries.GetAllGenreAdmin.GenreAdminListViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid" style="padding: 20px 20px">
    <div id="ui-view" style="background-color: #ffffff">
        <div>
            <div class="animated fadeIn" style="border: 1px solid #f0f3f5;">
                <div class="card">
                    <div class="card-header" style="background-color: #f0f3f5; padding:10px 20px 10px 20px ">
                        <i class="fa fa-edit"></i> Thể loại
                        <div class="card-header-actions" style="float:right; padding-right: 20px">
                            <a asp-action="Create">
                                Thêm mới
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row" style=" padding: 70px 15px 0px 15px">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered datatable dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info" style="border-collapse: collapse !important">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" aria-sort="descending" style="width: 281px;">Name</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Description: activate to sort column ascending" style="width: 240.2px;">Description</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Date Created: activate to sort column ascending" style="width: 240.2px;">Date Created</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="DateModified: activate to sort column ascending" aria-sort="descending" style="width: 281px;">Date Modified</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="number of books: activate to sort column ascending" style="width: 150.2px;">Number of books</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 121.8px;">Status</th>
                                                <th class="sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" style="width: 150.2px;">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.List)
                                            {
                                                if (@item.Status == 1)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td class="sorting_1">@item.Name</td>
                                                        <td class="sorting_1">@item.Description</td>
                                                        <td>@item.DateCreated</td>
                                                        <td>@item.DateModified</td>
                                                        <td>@item.BookGenres.Count</td>
                                                        <td>
                                                            <span class="badge badge-success" style="background-color: forestgreen">ACTIVE </span>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a class="btn btn-danger" onclick="return btDelete()" asp-action="Delete" asp-route-id="@item.Id">
                                                                <i class="fa fa-trash-o"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function btDelete() {
        return (confirm('Are you sure you want to delete the Genre'));
    }
</script>